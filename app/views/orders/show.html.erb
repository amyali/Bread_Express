<div class="row">
  <div class="col s7">
    <%= render :partial => "order_details" %>
  </div>
  <div class="col s5">
    <%= render partial: "orders/previous_orders", locals: {previous_orders: @previous_orders}  unless @previous_orders.empty?%>
  </div>
</div>

<% if logged_in? && current_user.role?(:customer) %>
  <div class="form-actions">
    <%= link_to orders_path, class: 'button radius' do %>
      &nbsp;Return to My Orders
    <% end %>
  </div>
<% else %>
  <%= render partial: "partials/object_options", locals: {model_name: "order", object: @order}  %>
<% end %>
