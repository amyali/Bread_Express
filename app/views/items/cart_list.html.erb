<div class="container">
	<h3>Your Cart <i class="medium mdi-action-shopping-cart"></i></h3>

	<% if @order_items.nil? || @order_items.empty? %>
		<h5><br/>Your cart is currently empty! Go to our <%= link_to "menu", items_path %> to add items to your cart.</h5>

	<% else %>
		<div class="row">
		<%= render partial: "partials/cart_list" %>
		<div align="right">
			<h5>Item Cost: <%= number_to_currency @items_cost %><br/>
			Shipping Cost: <%= number_to_currency @shipping_cost %></h5>
			<h4>Total Cost: <%= number_to_currency @total %></h4>
		</div>
	  <% end %>
	

</div>



</div>


