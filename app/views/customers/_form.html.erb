<%= simple_nested_form_for @customer, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>

    <div class="span5">
      <legend>New Customer</legend>
      <div id="user_information">
        <%= f.simple_fields_for :user do |user_form| %>
          <%= user_form.input :username %>
          <%= user_form.input :password %>
          <%= user_form.input :password_confirmation %>
        <% end %>

        <%= f.input :first_name, input_html: {class: "avg"} %>
        <%= f.input :last_name, input_html: {class: "avg"} %>
        <%= f.input :phone, input_html: {class: "avg"} %>
        <%= f.input :email, input_html: {class: "avg"} %>


        <div class="form-actions">
      <%= f.submit nil, :class => 'btn light green' %>
      <%= link_to 'Cancel', customers_path, :class => 'button alert radius' %>
    </div>
  </div>
</div>
  </fieldset>
<% end %>