<div class="col s4">
	<div class="card #689f37 green">
		<div class="card-content white-text">
			<span class="card-title">My Account</span>
			<p>
				Username: <%= current_user.username %><br />
			  <%= link_to "[Edit My Account]", customer_path(current_user) %>
			  &nbsp;&nbsp;::&nbsp;&nbsp;
			  <%= link_to "[Log out]", logout_path %>
				</p>
		</div>
	</div>
</div>

<!-- SHIPPING LIST -->
<div class="col s8">
	<div class="card #e8f5e9 green lighten-5">
		<div class="card-content black-text">
			<span class="card-title black-text">Shipping List</span>
			<p>
			<% if @shipping_list.nil? || @shipping_list.empty? %>
				<p><i class="small mdi-action-done"></i> All orders shipped</p>
			<% else %>
				<table class="hoverable">
					<thead>
						<tr>
							<th>Recipient</th>
							<th>Items</th>
						</tr>
					</thead>
					<% @shipping_list.each do |order| %>
						<tr>
							<td><%= order.address.recipient %></td>
							<td>come back to this</td>
						</tr>
					<% end %>
				</table>
			<% end %>
		</p>
		</div>
	</div>
</div>