<%= simple_form_for(@item_price) do |f| %>

<div class="form-inputs">
	<%= f.input :price %>
	<%= f.input :item_id, :as => :hidden, :input_html => { :value => @item.id } %>
	<%= f.input :start_date, :as => :hidden, :input_html => { :value => Date.today } %>
</div>

<div class="form-actions">
	<%= f.button :submit %>
</div>
<% end %>